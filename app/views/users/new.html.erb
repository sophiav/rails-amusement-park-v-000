<h1>New User Signup</h1> 
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :height %>
  <%= f.number_field :height %><br>

  <%= f.label :tickets %>
  <%= f.number_field :tickets %><br>

  <%= f.label "Happiness (1-5 scale)" %>
  <%= f.number_field :happiness, min: 1, max: 5 %><br>

  <%= f.label "Nausea (1-5 scale)" %>
  <%= f.number_field :nausea, min: 1, max: 5%><br>

  <%= f.label :admin %>
  <%= f.check_box :admin %><br>
  
  <br>
  <%= f.submit 'Create User'%>
<% end %>
